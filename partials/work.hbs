{{> _head}}

{{> _site-header}}

<main>

  <section>

  <ol class="even-grid">
    {{#each work-items}}
      <li class="even-grid--item">


      <a href="{{ action.url }}">
        <div class="even-grid--item-inner-wrapper">

          {{!-- This href should be the href of the first action item --}}
          <div class="even-grid--contents">

            <h2 class="even-grid--title" data-fittext-compression="1.7" data-fittext-media-query="(min-width: 40em)">{{ title }}</h2>

            {{#if headline}}
            <p class="even-grid--subtitle {{#if image}}even-grid--subtitle_with-image{{/if}}" data-fittext-compression="1.7" data-fittext-media-query="(min-width: 40em)">{{ headline }}</p>
            {{/if}}

            {{#if image}}
            <div class="even-grid--image-wrapper">
              <img class="even-grid--image" src="{{ image }}" alt="{{ image_alt }}" />
            </div>
            {{/if}}

            <div class="even-grid--button-wrapper {{#if image}}even-grid--button-wrapper_with-image{{/if}}">
              <span class="button button_standard-hidden button_inline">{{ action.cta }}</span>
            </div>

          </div>

        </div>
      </a>


      </li>
    {{/each}}
  </ol>

  </section>
</main>

{{> _footer}}
