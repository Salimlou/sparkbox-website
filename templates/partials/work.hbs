{{> _head}}

{{> _site-header}}

<main>

  <span class="button--standard">something</span>

  <section>


  <ol class="even-grid">
    {{#each work-items}}
      <li class="even-grid--item">
      <a href="{{ url }}" title="Read more about {{ title }}">

        <div class="even-grid--item-inner-wrapper">
          <div class="even-grid--contents {{#if image}}even-grid--contents_has-image{{/if}}">

            <h2>{{ title }}</h2>

            {{#if headline}}
              <p>{{ headline }}</p>
            {{/if}}

            {{#if image}}
            <div class="even-grid--image-wrapper">
              <img class="even-grid--image" src="{{ image }}" alt="{{ image_alt }}" />
            </div>
            {{/if}}

          </div>
        </div>

      </a>
      </li>
    {{/each}}
  </ol>

  </section>
</main>

{{> _footer}}
